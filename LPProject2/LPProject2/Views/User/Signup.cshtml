
@model UserViewModel

@{
    ViewData["Title"] = "Signup";

}



<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1"><i class="fas  fa-ticket-alt icon-margin-right"></i>New User</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <form asp-action="AddUser" method="POST">
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.UserName)</label>
                            <div class="col-sm-10">
                                <input asp-for="UserName" type="text" name="Name" class="form-control" placeholder="Name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Password)</label>
                            <div class="col-sm-10">
                                <input asp-for="Password" type="password" name="Password" class="form-control" placeholder="Password" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.UserPhone)</label>
                            <div class="col-sm-10">
                                <input asp-for="UserPhone" type="text" name="phone" class="form-control" placeholder="phone" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.UserEmail)</label>
                            <div class="col-sm-10">
                                <input asp-for="UserEmail" type="text" name="email" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.UserNationalty)</label>
                            <div class="col-sm-10">
                                <input asp-for="UserNationalty" type="text" name="nationality" class="form-control" placeholder="Nationalty">
                            </div>
                         </div>


                        <div class="form-group row float-right">
                            <div class="col-md-12">
                                <button type="file" class="au-btn orange icon-margin-right">Add Picture</button>

                                <input type="submit" onclick="ShowPopUp()" value="Create Account" class="au-btn orange" />
                            </div>

                        </div>
                    </form>
                    <div id="succesPopUp">
                        <label class="label-success">@ViewBag.SuccessMessage</label>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

