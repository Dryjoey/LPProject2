@model GameViewModel;
@{
    ViewData["Title"] = "GameForm";
}

<h2>GameForm</h2>

 


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1"><i class="fas  fa-ticket-alt icon-margin-right"></i>New Game</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <form asp-action="AddGame" method="POST">
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Name)</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" type="text" name="Name" class="form-control" placeholder="Name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Category)</label>
                            <div class="col-sm-10">
                                <input asp-for="Category" type="text" name="Category" class="form-control" placeholder="Category" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Discription)</label>
                            <div class="col-sm-10">
                                <input asp-for="Discription" type="text" name="Discription" class="form-control" placeholder="Discription" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Price)</label>
                            <div class="col-sm-10">
                                <input asp-for="Price" type="text" name="Price" class="form-control" placeholder="Price" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Hireable)</label>
                            <div class="col-sm-10">
                                <input asp-for="Hireable" type="text" name="Hireable" class="form-control" placeholder="Hireable">
                            </div>
                        </div>




                        <div class="form-group row float-right">
                            <div class="col-md-12">
                                <button type="submit" class="au-btn orange icon-margin-right">Add Picture</button>

                                <input type="submit" onclick="ShowPopUp()" value="Add new Game" class="au-btn orange" />
                            </div>

                        </div>
                    </form>
                    <div id="succesPopUp">
                        <label class="label-success">@ViewBag.SuccessMessage</label>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


