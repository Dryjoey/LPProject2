@model AdViewModel;
@{
    ViewData["Title"] = "GameForm";
}

<h2>GameForm</h2>




<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1"><i class="fas  fa-ticket-alt icon-margin-right"></i>New Ad</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">

                    <form asp-action="AddGame" method="POST">
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Name)</label>
                            <div class="col-sm-10">
                                <input asp-for="Name" type="text" name="Name" class="form-control" placeholder="Name" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Game.name)</label>
                            <div class="col-sm-10">
                                <input asp-for="Game" type="text" name="name" class="form-control" placeholder="Gamename" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Game.category)</label>
                            <div class="col-sm-10">
                                <input asp-for="Game" type="text" name="category" class="form-control" placeholder="category" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Game.description)</label>
                            <div class="col-sm-10">
                                <input asp-for="Game" type="text" name="Description" class="form-control" placeholder="description" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">@Html.DisplayNameFor(model => model.Game.price)</label>
                            <div class="col-sm-10">
                                <input asp-for="Game.price" type="text" name="price" class="form-control" placeholder="price" required>
                            </div>
                        </div>





                        <div class="form-group row float-right">
                            <div class="col-md-12">
                                <button type="submit" class="au-btn orange icon-margin-right">Add Picture</button>

                                <input type="submit" onclick="ShowPopUp()" value="Upload Ad" class="au-btn orange" />
                            </div>

                        </div>
                    </form>
                    <div id="succesPopUp">
                        <label class="label-success">@ViewBag.SuccessMessage</label>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


